@page "/"

@using Models

<PageTitle>Index</PageTitle>

<h1>Game Catalog</h1>

<table id="games-table-main">
    <thead>
        <th>Id</th>
        <th>Name</th>
        <th>Genre</th>
        <th>Price</th>
        <th>Release Date</th>
    </thead>
    <tbody>
        @foreach(var item in games)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Genre</td>
                <td>@item.Price</td>
                <td>@item.ReleaseDate.ToString("MM/dd/yyyy")</td>
            </tr>
        }

    </tbody>
</table>



